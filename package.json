{
  "name": "vscode-css-to-tailwindcss",
  "displayName": "CSS to TailwindCSS converter",
  "description": "CSS to TailwindCSS 3.x converter extension for Visual Studio Code",
  "author": "Salavat Salakhutdinov <salahutdinov.salavat@gmail.com>",
  "license": "MIT",
  "version": "1.2.5",
  "homepage": "https://github.com/jackardios/vscode-css-to-tailwindcss",
  "bugs": {
    "url": "https://github.com/jackardios/vscode-css-to-tailwindcss/issues",
    "email": "hello@bradley.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jackardios/vscode-css-to-tailwindcss.git"
  },
  "publisher": "Jackardios",
  "keywords": [
    "convert",
    "converter",
    "conversion",
    "css",
    "postcss",
    "tailwind",
    "tailwindcss",
    "css-to-tailwind",
    "vscode"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cssToTailwindCss.convertCssToTailwindCss",
        "title": "Convert CSS to TailwindCSS"
      }
    ],
    "configuration": {
      "title": "CSS to TailwindCSS converter",
      "properties": {
        "cssToTailwindCss.arbitraryProperties": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Defines whether non-convertible properties should be converted as 'arbitrary properties'."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/micromatch": "^4.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/postcss-js": "^4.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.17.5",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "css-to-tailwindcss": "^1.0.3",
    "micromatch": "^4.0.5",
    "nanoid": "^4.0.1",
    "postcss-js": "^4.0.0",
    "postcss-nested": "^6.0.0",
    "replace-string": "^4.0.0",
    "tolerant-json-parser": "^1.0.1"
  }
}
